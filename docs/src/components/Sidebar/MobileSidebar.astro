---
import Sidebar from "./Sidebar.astro";
---

<label
  for="mobile-sidebar"
  class="block rounded-2xl p-2 transition-colors hover:bg-gray-100"
>
  <span class="i-ph-list block h-7 w-7"></span>
</label>
<div class="fixed left-0 top-0 -z-10 flex h-full w-full has-[:checked]:z-10">
  <input id="mobile-sidebar" type="checkbox" class="peer" hidden />
  <div
    class="w-3/4 max-w-80 -translate-x-full overflow-y-auto bg-white px-2 py-3 transition-transform peer-checked:translate-x-0"
  >
    <Sidebar />
  </div>
  <label
    for="mobile-sidebar"
    class="flex-1 bg-black bg-opacity-50 opacity-0 transition-opacity peer-checked:opacity-100"
  ></label>
</div>
